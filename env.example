# Database
DATABASE_URL=postgresql://user:password@localhost:5432/haemologix

# LLM / AI Services
OPENROUTER_API_KEY=your_openrouter_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here  # Optional: For PDF extraction
HF_API_KEY=your_huggingface_api_key_here  # Optional: For document processing

# AWS S3 (for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET_NAME=your_bucket_name
S3_BUCKET_NAME=your_bucket_name  # Alternative naming

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SMTP (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Geocoding (optional fallback)
OPENCAGE_API_KEY=your_opencage_api_key  # Optional: Fallback geocoding service

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Admin Access
NEXT_PUBLIC_ADMIN_PASSKEY=your_admin_passkey

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Node Environment
NODE_ENV=development

